{
  "name": "fighter-jet",
  "description": "A Fighter jet shooting game",
  "author": "Tahlil bsse0803@iit.du.ac.bd",
  "license":"Apache-2.0",
  "version": "1.0.0",
  "main": "main.js",
  "devDependencies": {
    "electron": "^1.6.11",
    "electron-builder": "^20.38.5"
  },
  "repository": "https://github.com/Tahlil/FIghterJetElectron",
  "scripts": {
    "start": "electron .",
    "dist": "build --arch all",
    "ship": "build --win -p always",
    "postinstall":"install-app-deps"
  },
  "dependencies": {
    "electron-updater": "^4.0.6",
    "jquery": "^3.3.1",
    "electron-is-dev": "1.0.1",
    "electron-log": "2.2.17"
  },
  "build": {
    "appId": "com.bs.jetFighterElectron",
    "productName": "Fighter Jet",
    "publish": [
      {
        "provider": "github",
        "repo":"FighterJetElectron", 
        "owner":"Tahlil"
      }
    ],
    "mac": {
      "category": "public.app-category.game"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category":"Games",
      "icon":"build/icons",
      "packageCategory": "games",
      "maintainer": "Tahlil bsse0803@iit.du.ac.bd",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "synopsis":"A fighter jet shooting game"
    },
    "deb":{
      "publish": [
        {
          "provider": "bintray",
          "package":"Fighter-jet-deb",
          "repo":"Fighter-jet-debian", 
          "owner":"Tahlil",
          "component":"Fighter-jet-deb"
        }
      ],
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "rpm":{
      "publish": [
        {
          "provider": "bintray",
          "package":"Fighter-jet-rpm",
          "repo":"Fighter-jet-rpm", 
          "owner":"Tahlil"
        }
      ],
      "depends": [
        "GConf2",
        "libnotify",
        "nss",
        "libappindicator",
        "libXtst"
      ]
    },
    "snap":{
      "confinement": "strict",
      "summary":"A fighter jet shooting game",
      "grade":"stable",
      "buildPackages":[],
      "stagePackages": [
        
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "libxss1",
        "fontconfig-config",
        "gconf2",
        "libasound2",
        "pulseaudio"
      ],
      "plugs":[
        "default",
        "unity8-calender"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "icon.ico"
    },
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "license": "LICENSE",
      "runAfterFinish": true
    }
  }
}
